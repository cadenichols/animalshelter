extends ../../layouts/master
block content
  h3= client.name

  form.form-horizontal(method='post', action='/clients/#{client._id}')
    .form-group
      label.col-sm-2.control-label(for='name') Name
      .col-sm-10
        input#name.form-control(type='text', name='name', placeholder='Name', autofocus=true, value=client.name, required)
    .form-group
      label.col-sm-2.control-label(for='address') Address
      .col-sm-10
        input#address.form-control(type='text', name='address', placeholder='Address', value=client.address, required)
    .form-group
      label.col-sm-2.control-label(for='phonenumber') Phone Number
      .col-sm-10
        input#phonenumber.form-control(type='text', name='phonenumber', placeholder='Phone Number', value=client.phonenumber, required)
    .form-group
      label.col-sm-2.control-label(for='age') Age
      .col-sm-10
        input#age.form-control(type='number', name='age', placeholder='Age', value=client.age, required)
    .form-group
      label.col-sm-2.control-label(for='gender') Gender
      .col-sm-10
        .radio
          label
            input(type='radio', name='gender', value='male', required, checked=client.gender === 'male')
            span Male
        .radio
          label
            input(type='radio', name='gender', value='female', required, checked=client.gender === 'female')
            span Female
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-default(type='submit') Submit
